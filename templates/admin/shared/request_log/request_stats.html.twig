<div class="card ">
    <div class="card-header">
        <h3 class="mb-0">
            {{ 'threebrs.ui.statistics_plugin.most_requested_pages_with_days'|trans({'%days%': requestLogDays}) }}
        </h3>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive mb-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>{{ 'threebrs.ui.statistics_plugin.route_name'|trans }}</th>
                        <th>{{ 'threebrs.ui.statistics_plugin.requests'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in mostRequestedPages %}
                        <tr>
                            <td>{{ row.routeName }}</td>
                            <td>{{ row.visitCount }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-muted text-center">
                                {{ 'threebrs.ui.statistics_plugin.no_data'|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
