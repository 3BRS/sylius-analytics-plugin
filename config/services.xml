<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Messenger Handler -->
        <service id="ThreeBRS\SyliusAnalyticsPlugin\MessageHandler\LogVisitMessageHandler"
                 autowire="true" autoconfigure="true" />

        <!-- Request Logger (Event Subscriber) -->
        <service id="ThreeBRS\SyliusAnalyticsPlugin\EventListener\VisitLoggerSubscriber"
                 autowire="true" autoconfigure="true">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
